package chap12;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;
/*
 * Date 클래스 : 날짜 표현하는 클래스. 현지일시객체 생성
 * SimpleDateFormat 클래스 : Data 객체를 형식화된 문자열로 변경
 * 	 String format(Date객체): Date객체를 형식화하면 문자열로 리턴
 * 날짜 format에 사용되는 문자
 *  yyyy : 년도 4자리
 *  MM	 : 월을 2자리
 *  dd	 : 일을 2자리
 *  HH	 : 시간을 2자리
 *  mm
 *  ss
 *  E	 : 요일
 *  a	 : 오전/ 오후
 */
public class DateEx1 {

	public static void main(String[] args) {
		Date now = new Date();
		System.out.println(now);
		// java.text.simpledateformat : 날짜출력시 형식에 맞ㄷ도록 설정
		SimpleDateFormat sf = new SimpleDateFormat("yyyy-MM-dd HH시 mm분 ss초 E a");
		System.out.println(sf.format(now));
		SimpleDateFormat sf2 = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss E a");
		System.out.println(sf2.format(now));
		String dateStr = "2022-09-13";
		Date date = null;
		SimpleDateFormat sf3 = new SimpleDateFormat("yyyy-mm-dd");
		
		try {
			date = sf3.parse(dateStr);
		} catch (ParseException e) {
			e.printStackTrace();
		}
		System.out.println(date);
		System.out.println(sf2.format(date));
		
		SimpleDateFormat sf4 = new SimpleDateFormat("E a");
	}

}
