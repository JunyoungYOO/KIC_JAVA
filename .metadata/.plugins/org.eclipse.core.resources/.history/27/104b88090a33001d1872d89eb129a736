package chap12;

import java.util.Random;

/*
 * Random 클래스 : 난수 발생을 위한 클래스
 *  1. 자료형별로 난수 발생을 위한 메서드 존재
 *    nextInt() : 정수형 난수 리턴
 *    nextInt(n) : 0<=n < n 정수형 난수 리턴
 *    nextDouble() : 0<=x<1.0 실수형 난수 리턴
 *    nextBoolean() : true/false중 하나 리턴
 *  2. seed 값 설정
 */
public class RandomEx1 {

	public static void main(String[] args) {
		Random rand1 = new Random();
		rand1.setSeed(1);
		Random rand2 = new Random();
		rand2.setSeed(1);
		System.out.println("rand1 객체에서 난수 발생:");
		for (int i =0;i<5;i++) {
			System.out.println(i+":" + rand1.nextInt(100));
			
		System.out.println("rand2 객체에서 난수 발생");
		
		for (int i=0;i<5;i++) 
			System.out.println(i+":" + rand2.nextInt(100));
		
	}

}
